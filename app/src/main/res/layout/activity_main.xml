<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:alpha="0.7"
    android:layout_height="match_parent"
    android:background="@drawable/running"
    tools:context=".MainActivity">



    <Button
        android:id="@+id/signIupButton"
        android:layout_width="299dp"
        android:layout_height="wrap_content"
        android:background="@color/colorRed"
        android:layout_marginTop="48dp"
        android:text="Sign Up"
        android:textColor="@android:color/white"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.605" />

    <Button

        android:layout_width="0dp"
        android:text="Login"
        android:textColor="@android:color/white"
        android:id="@+id/loginButton"
        android:background="@color/colorRed"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@+id/signIupButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/signIupButton"
        app:layout_constraintTop_toBottomOf="@+id/signIupButton" />

</androidx.constraintlayout.widget.ConstraintLayout>